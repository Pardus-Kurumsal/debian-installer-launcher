#!/bin/sh

set -e

if [ -f "/etc/skel/Masaüstü/debian-installer-launcher.desktop" ]; then
    echo "Removing Masaüstü directory from /etc/skel"
    rm -rf /etc/skel/Masaüstü
    
    echo "Removing desktop file from all created users"
    for user in /home/*
    do
        rm -rf ${user}/Masaüstü/debian-installer-launcher.desktop        
    done
fi
